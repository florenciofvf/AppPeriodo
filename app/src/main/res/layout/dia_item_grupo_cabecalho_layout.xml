<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:elevation="@dimen/cinco_dp"
	android:orientation="horizontal"
	android:padding="@dimen/dez_dp">

	<TextView
		android:id="@+id/txtNumero"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginRight="@dimen/cinco_dp"
		android:maxWidth="@dimen/vinte_dp" />

	<TextView
		android:id="@+id/txtNome"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginRight="@dimen/cinco_dp"
		android:gravity="center"
		android:maxWidth="@dimen/quarenta_dp"
		android:minWidth="@dimen/quarenta_dp" />

	<TextView
		android:id="@+id/txtSinc"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_gravity="center"
		android:layout_marginRight="@dimen/sete_dp"
		android:background="@drawable/bg_360_sinc"
		android:elevation="@dimen/dez_dp"
		android:gravity="center"
		android:maxHeight="@dimen/doze_dp"
		android:maxWidth="@dimen/doze_dp"
		android:minHeight="@dimen/doze_dp"
		android:minWidth="@dimen/doze_dp"
		android:paddingLeft="@dimen/sete_dp"
		android:paddingRight="@dimen/sete_dp" />

	<TextView
		android:id="@+id/txtVal"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_gravity="center"
		android:layout_marginRight="@dimen/sete_dp"
		android:background="@drawable/bg_360_valido"
		android:elevation="@dimen/dez_dp"
		android:gravity="center"
		android:maxHeight="@dimen/doze_dp"
		android:maxWidth="@dimen/doze_dp"
		android:minHeight="@dimen/doze_dp"
		android:minWidth="@dimen/doze_dp"
		android:paddingLeft="@dimen/sete_dp"
		android:paddingRight="@dimen/sete_dp" />

	<TextView
		android:id="@+id/txtId"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_gravity="center"
		android:layout_marginRight="@dimen/sete_dp"
		android:background="@drawable/bg_360_id"
		android:elevation="@dimen/dez_dp"
		android:gravity="center"
		android:maxHeight="@dimen/doze_dp"
		android:maxWidth="@dimen/doze_dp"
		android:minHeight="@dimen/doze_dp"
		android:minWidth="@dimen/doze_dp"
		android:paddingLeft="@dimen/sete_dp"
		android:paddingRight="@dimen/sete_dp" />

	<TextView
		android:id="@+id/txtTotal"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginRight="@dimen/cinco_dp"
		android:background="@drawable/bg_total"
		android:elevation="@dimen/vinte_dp"
		android:paddingLeft="@dimen/sete_dp"
		android:paddingRight="@dimen/sete_dp"
		android:textColor="@color/branco" />

	<TextView
		android:id="@+id/txtTotalLei"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginRight="@dimen/cinco_dp"
		android:background="@drawable/bg_valido"
		android:elevation="@dimen/vinte_dp"
		android:paddingLeft="@dimen/sete_dp"
		android:paddingRight="@dimen/sete_dp"
		android:textColor="@color/branco" />

	<TextView
		android:id="@+id/txtDebito"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginRight="@dimen/cinco_dp"
		android:background="@drawable/bg_debito"
		android:elevation="@dimen/vinte_dp"
		android:paddingLeft="@dimen/sete_dp"
		android:paddingRight="@dimen/sete_dp"
		android:textColor="@color/branco" />

	<TextView
		android:id="@+id/txtCredito"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:background="@drawable/bg_credito"
		android:elevation="@dimen/vinte_dp"
		android:paddingLeft="@dimen/sete_dp"
		android:paddingRight="@dimen/sete_dp"
		android:textColor="@color/branco" />

</LinearLayout>