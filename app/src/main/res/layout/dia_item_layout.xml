<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/margem_inferior"
    android:paddingTop="@dimen/margem_superior">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtNumero"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/esp_esquerdo_2"
            android:textSize="@dimen/fonte_item_dia" />

        <TextView
            android:id="@+id/txtNome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/esp_esquerdo"
            android:layout_marginRight="@dimen/esp_direito"
            android:textSize="@dimen/fonte_item_dia" />


        <TextView
            android:id="@+id/txtManhaIni"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/fonte_item_dia" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_barra"
            android:textSize="@dimen/fonte_item_dia" />

        <TextView
            android:id="@+id/txtManhaFim"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/fonte_item_dia" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_igual"
            android:textSize="@dimen/fonte_item_dia" />

        <TextView
            android:id="@+id/txtManhaCal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/esp_direito"
            android:textSize="@dimen/fonte_item_dia" />


        <TextView
            android:id="@+id/txtTardeIni"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/fonte_item_dia" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_barra"
            android:textSize="@dimen/fonte_item_dia" />

        <TextView
            android:id="@+id/txtTardeFim"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/fonte_item_dia" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_igual"
            android:textSize="@dimen/fonte_item_dia" />

        <TextView
            android:id="@+id/txtTardeCal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/esp_direito"
            android:textSize="@dimen/fonte_item_dia" />


        <TextView
            android:id="@+id/txtNoiteIni"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/fonte_item_dia" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_barra"
            android:textSize="@dimen/fonte_item_dia" />

        <TextView
            android:id="@+id/txtNoiteFim"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/fonte_item_dia" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_igual"
            android:textSize="@dimen/fonte_item_dia" />

        <TextView
            android:id="@+id/txtNoiteCal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/fonte_item_dia" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/esp_esquerdo_2"
            android:text="@string/label_total"
            android:textSize="@dimen/fonte_item_dia" />

        <TextView
            android:id="@+id/txtTotal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/esp_esquerdo_3"
            android:layout_marginRight="@dimen/esp_direito_2"
            android:textSize="@dimen/fonte_item_dia" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_debito"
            android:textSize="@dimen/fonte_item_dia" />

        <TextView
            android:id="@+id/txtDebito"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/esp_esquerdo_3"
            android:layout_marginRight="@dimen/esp_direito_2"
            android:textSize="@dimen/fonte_item_dia" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_credito"
            android:textSize="@dimen/fonte_item_dia" />

        <TextView
            android:id="@+id/txtCredito"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/esp_esquerdo_3"
            android:layout_marginRight="@dimen/esp_direito_2"
            android:textSize="@dimen/fonte_item_dia" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_obs"
            android:textSize="@dimen/fonte_item_dia" />

        <TextView
            android:id="@+id/txtObs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/esp_esquerdo_3"
            android:textSize="@dimen/fonte_item_dia" />
    </LinearLayout>

</LinearLayout>